{
  "manifest_version": 2,
  "name": "Password Paster Next",
  "description": "Paste password in those website's input field where Ctrl+V doesn't functions",
  "version": "0.0.1",
  "icons": {
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icon_32.png",
      "64": "icons/icon_64.png",
      "128": "icons/icon_128.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "Password Paster Next"
  },
  "web_accessible_resources": ["icons/icon_32.png"],
  "content_scripts": [
    {
      "css": ["contentScripts/contentScript.css"],
      "matches": ["http://*/*", "https://*/*"]
    },
    {
      "js": ["utils/browser-polyfill.min.js"],
      "matches": ["http://*/*", "https://*/*"]
    },
    {
      "js": ["contentScripts/contentScript.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": ["http://*/*", "https://*/*", "clipboardRead"]
}
